1.) Method little longer approch
class Solution {
public:
    bool isAnagram(string s, string t) {
        if (s.size() != t.size()) 
            return false;

        for (int i = 0; i < s.size(); i++) 
        {
            size_t found = t.find(s[i]);
            if (found != string::npos)
            {
                t.erase(found, 1); 
            }
            else 
            {
                return false;
            }    
        }
        return true;
    }
};

2.) Second method is direct

class Solution {
public:
    bool isAnagram(string s, string t) {
        if (s.size() != t.size())
            return false;

        sort(s.begin(), s.end());
        sort(t.begin(), t.end());

        return s == t;
    }
};
