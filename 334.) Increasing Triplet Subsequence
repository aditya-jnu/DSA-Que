#include <vector>
using namespace std;

class Solution {
public:
    bool increasingTriplet(vector<int>& nums) {
        int size = nums.size();
        if (size < 3)
        {
            return false;
        }

        int small = INT_MAX;
        int big = INT_MAX;  

        for (int num : nums) 
        {
            if (num <= small) 
            {
                small = num;
            } 
            else if (num <= big) 
            {
                big = num;
            } 
            else if (num > big ) 
            {
                return true;
            }
        }
        return false;
    }
};
